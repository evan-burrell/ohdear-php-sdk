{
    "name": "ohdearapp/ohdear-php-sdk",
    "description": "An SDK to easily work with the Oh Dear API",
    "keywords": [
        "oh dear",
        "monitoring",
        "api",
        "sdk"
    ],
    "homepage": "https://github.com/ohdearapp/ohdear-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "support@ohdear.app",
            "homepage": "https://ohdear.app",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "saloonphp/pagination-plugin": "^2.0",
        "saloonphp/saloon": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "OhDear\\PhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OhDear\\PhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest -p",
        "real": "php tests/TestSupport/scripts/real-test.php"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true
        }
    }
}
