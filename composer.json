{
    "name": "ohdearapp/ohdear-php-sdk",
    "description": "An SDK to easily work with the Oh Dear API",
    "keywords": [
        "oh dear",
        "monitoring",
        "api",
        "sdk"
    ],
    "homepage": "https://github.com/ohdearapp/ohdear-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "support@ohdear.app",
            "homepage": "https://ohdear.app",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^6.5.8|^7.5",
        "nesbot/carbon": "^2.65.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.8.3",
        "psalm/plugin-laravel": "^2.5",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "OhDear\\PhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OhDear\\PhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "format": "vendor/bin/php-cs-fixer fix",
        "test": "vendor/bin/pest -p"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true
        }
    }
}
